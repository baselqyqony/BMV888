@model IEnumerable<Bee_Project.Areas.ServiceProvider.Models.VModel.VServiceItem>

@{
    ViewBag.Title = "Service Lists";
    ///Layout = "~/Areas/ServiceProvider/Views/Shared/_Layout.cshtml";
}

<h2>Services List</h2>

<p>
    @Html.ActionLink("Create New", "CreateService")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.serviceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.serviceMetaData)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.serviceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.serviceMetaData)
        </td>
        <td>
            @Html.ActionLink("Edit", "editService", new { id=item.ID }) |
            @Html.ActionLink("user Appointments", "serviceUserAppiointments", new { id = item.ID }) |
            @Html.ActionLink("Details", "ServiceDetail", new { id=item.ID }) |
            @Html.ActionLink("Delete", "deleteService", new { id = item.ID }, new { onclick = "return confirm('Are you sure you wish to delete this Service?');" })
        </td>
    </tr>
}

</table>
